#!/usr/bin/env ruby
# frozen_string_literal: true

ARCH = 'x64'
MAJOR_NODEJS_VERSION = 8
GITHUB_REPO_URL = 'https://github.com/nodejs/node.git'
DOWNLOAD_BASE_URL = 'https://nodejs.org/dist'

def github_releases
  `git ls-remote -t #{GITHUB_REPO_URL}`
end

def most_recent_version
  github_releases.scan(/#{MAJOR_NODEJS_VERSION}\.\d+\.\d+/).last
end

def version
  @version ||= most_recent_version
end

def version_info
  p "most recent nodejs version #{MAJOR_NODEJS_VERSION} is: #{version}"
end

def file_name
  "node-v#{version}-linux-#{ARCH}.tar.gz"
end

def download_url
  "#{DOWNLOAD_BASE_URL}/v#{version}/#{file_name}"
end

def install_nodejs
  p "installing nodejs #{version} ..."
  Dir.chdir('/tmp') do
    system!('mkdir -p /opt/nodejs')
    system!("wget #{download_url}")
    system!("tar xfz #{file_name} -C /opt/nodejs --strip-components=1")
    system!("rm #{file_name}")
    system!('npm install -g yarn')
  end
end

def system!(cmd)
  p cmd
  raise "Error executing: #{cmd}" unless system(cmd)
end

version_info
install_nodejs
